<Application x:Class="TWD.Northwind.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TWD.Northwind.WPF">
    <Application.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="Header">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="Detail">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="CRUDButtons">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="Margin" Value="5 0 0 0"/>
            <Setter Property="Padding" Value="10 5"/>
        </Style>
    </Application.Resources>
</Application>
