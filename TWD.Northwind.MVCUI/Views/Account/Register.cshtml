@using System.Threading.Tasks
@model TWD.Northwind.MVCUI.Models.RegisterViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="row justify-content-md-center">
            <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
                <div class="card">

                    <h5 style="margin:1%" class="card-title">Sign Up</h5>
             
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                            <div  style="margin:1%"  class="form-group">
                                @*<label asp-for="UserName" class="col-md-3 control-label"></label>*@
                                <div class="col-md-9">
                                    <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                            </div>

                            <div  style="margin:1%" class="form-group">
                                @*<label asp-for="Password" class="col-md-3 control-label"></label>*@
                                <div class="col-md-9">
                                    <input asp-for="Password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div  style="margin:1%" class="form-group">
                                @*<label asp-for="Email" class="col-md-3 control-label"></label>*@
                                <div class="col-md-9">
                                    <input asp-for="Email" class="form-control" placeholder="Email Address">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div style="margin:1%" class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" class="btn btn-info" value="Register"><i class="icon-hand-right"></i>
                                </div>
                            </div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a asp-controller="Account" asp-action="Login">Sign In</a></div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>