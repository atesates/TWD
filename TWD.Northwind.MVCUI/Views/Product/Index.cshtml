@model TWD.Northwind.MVCUI.Models.ProductListViewModel

@{ 
    Layout = "~/Views/_Layout.cshtml";
}
<div>
    <table class="table table-reponsive">
        <tr>
            <td>ID</td>
            <td>Product Name </td>
            <td>Unit Price</td>
            <td>Units In Stock </td>
            <td></td>
        </tr>
        @foreach (var product in Model.Products)
        {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            @*<td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productID="@product.ProductID">add to cart</a></td>*@
            <td><a class="btn btn-xs btn-success"  href="/Cart/AddToCart/?productID=@product.ProductID">add to cart</a></td>
        </tr>
        }

    </table>

</div>
<product-list-pager 
                    current-category="@Model.CurrentCategory" 
                    current-page="@Model.CurrentPage"  
                    page-count="@Model.PageCount"  
                    page-size="@Model.PageSize" >

</product-list-pager>
